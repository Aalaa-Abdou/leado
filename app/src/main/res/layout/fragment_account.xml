<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/duck_egg_blue">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:id="@+id/img_back"/>

        </androidx.appcompat.widget.Toolbar>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolBar" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_img"
                android:text="Emily petersz"
                />

            <TextView
                android:id="@+id/txtJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtName"
                android:text="Student" />

        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:id="@+id/txtCoursesNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp"
            android:text="7"
            app:layout_constraintTop_toBottomOf="@id/txtJob"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCourses"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCoursesNumber"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:text="COURSES"
            />

        <TextView
            android:textStyle="bold"
            android:id="@+id/txtPointsNumber"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="193,79"
            app:layout_constraintStart_toStartOf="@id/txtCoursesNumber"
            app:layout_constraintEnd_toEndOf="@id/txtRankNumber"
            app:layout_constraintTop_toTopOf="@id/txtRankNumber"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPoints"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        app:layout_constraintEnd_toEndOf="@id/txtRank"
        app:layout_constraintTop_toTopOf="@id/txtRank"
        app:layout_constraintStart_toStartOf="@+id/txtCourses"
        android:text="POINTS"
        />


        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:id="@+id/txtRankNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="11"
            app:layout_constraintTop_toBottomOf="@id/txtJob"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtRank"
            android:textSize="20sp"
            android:text="RANK"
            android:layout_marginRight="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRankNumber"

            />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/mission_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPoints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>