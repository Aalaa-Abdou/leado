<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/duck_egg_blue">

        <androidx.cardview.widget.CardView
            android:layout_width="270dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            android:paddingHorizontal="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/journey_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Yourself Journey 30%"
                    android:textColor="#1f314a"
                    android:textSize="14sp"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_marginTop="5dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintEnd_toStartOf="@id/journey_tv"
                    android:layout_marginRight="20dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/badge_image_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/journey_tv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintStart_toStartOf="@id/journey_tv"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/badge_image_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="@id/badge_image_1"
                    app:layout_constraintBottom_toBottomOf="@id/badge_image_1"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintStart_toEndOf="@id/badge_image_1"
                    android:layout_marginLeft="5dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="@id/badge_image_2"
                    app:layout_constraintBottom_toBottomOf="@id/badge_image_2"
                    android:src="@drawable/ic_launcher_background"
                    app:layout_constraintStart_toEndOf="@id/badge_image_2"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/badge_image_1"
                    app:layout_constraintBottom_toBottomOf="@id/badge_image_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Rank:3rd"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="#1f314a"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="Personal-Branding"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@id/mind_mapping_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/mind_mapping_button"
            android:layout_marginBottom="150dp"
            android:minHeight="0dp"
            android:background="@drawable/curved_button_background"
            android:paddingHorizontal="15dp"/>

        <Button
            android:id="@+id/mind_mapping_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="Mind-Mapping"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@id/self_awareness_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="150dp"
            android:minHeight="0dp"
            android:background="@drawable/curved_button_background"
            android:paddingHorizontal="15dp"/>

        <Button
            android:id="@+id/self_awareness_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@drawable/curved_button_background"
            android:fontFamily="@font/rubik"
            android:minHeight="0dp"
            android:paddingHorizontal="15dp"
            android:text="Self-awareness"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/mind_mapping_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>