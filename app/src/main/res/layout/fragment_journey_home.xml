<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".JourneyHomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/duck_egg_blue">

        <TextView
            android:id="@+id/course_name_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Awareness Room"
            android:fontFamily="@font/rubik_medium"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginTop="12dp"/>
        <com.carlosmuvi.segmentedprogressbar.SegmentedProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="5dp"
            app:layout_constraintTop_toBottomOf="@id/course_name_TV"
            app:layout_constraintStart_toStartOf="@id/course_name_TV"
            app:layout_constraintEnd_toEndOf="@id/course_name_TV"
            app:gap_size="5dp"
            app:fill_color="#22d0c4"/>
        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_support_system"
            app:layout_constraintTop_toBottomOf="@id/progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/icon_2"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_elvis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_1"
            app:layout_constraintTop_toTopOf="@id/icon_1"
            app:layout_constraintBottom_toBottomOf="@id/icon_1"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:id="@+id/icon_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_elvis"
            app:layout_constraintEnd_toEndOf="@+id/icon_1"
            app:layout_constraintStart_toStartOf="@+id/icon_1"
            app:layout_constraintTop_toBottomOf="@id/subject_button_1" />

        <ImageView
            android:id="@+id/icon_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_elvis"
            app:layout_constraintEnd_toEndOf="@+id/icon_2"
            app:layout_constraintStart_toStartOf="@+id/icon_2"
            app:layout_constraintTop_toTopOf="@id/icon_3"
            app:layout_constraintBottom_toBottomOf="@id/icon_3"/>
        <Button
            android:id="@+id/subject_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_button_background"
            app:layout_constraintTop_toBottomOf="@id/icon_1"
            app:layout_constraintStart_toStartOf="@id/icon_1"
            app:layout_constraintEnd_toEndOf="@id/icon_1"
            android:minHeight="0dp"
            android:text="support systems"
            android:textAllCaps="false"
            android:paddingVertical="0dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/subject_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_button_background"
            app:layout_constraintTop_toTopOf="@id/subject_button_1"
            app:layout_constraintStart_toStartOf="@id/icon_2"
            app:layout_constraintEnd_toEndOf="@id/icon_2"
            app:layout_constraintBottom_toBottomOf="@id/subject_button_1"
            android:minHeight="0dp"
            android:text="support systems"
            android:textAllCaps="false"
            android:paddingVertical="0dp"/>

        <Button
            android:id="@+id/subject_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/curved_button_background"
            android:minHeight="0dp"
            android:paddingVertical="0dp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@id/icon_1"
            app:layout_constraintStart_toStartOf="@id/icon_1"
            app:layout_constraintTop_toBottomOf="@id/icon_3"
            android:text="support systems"/>
        <Button
            android:id="@+id/subject_button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_button_background"
            app:layout_constraintTop_toTopOf="@id/subject_button_3"
            app:layout_constraintStart_toStartOf="@id/icon_2"
            app:layout_constraintEnd_toEndOf="@id/icon_2"
            app:layout_constraintBottom_toBottomOf="@id/subject_button_3"
            android:minHeight="0dp"
            android:text="support systems"
            android:textAllCaps="false"
            android:paddingVertical="0dp"/>

        <ImageView
            android:id="@+id/white_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/white_rect_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/course_name_recycler_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/white_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="self-awareness"
            android:fontFamily="@font/rubik_medium"
            android:textSize="22sp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lessons_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/course_name_recycler_TV"
            android:background="@drawable/curved_button_background"
            tools:listitem="@layout/lesson_item"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>