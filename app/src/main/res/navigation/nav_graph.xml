<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.leado.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_journeyHomeFragment"
            app:destination="@id/journeyHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.leado.AccountFragment"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.leado.LibraryFragment"
        tools:layout="@layout/fragment_library" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.leado.SearchFragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/journeyHomeFragment"
        android:name="com.example.leado.JourneyHomeFragment"
        tools:layout="@layout/fragment_journey_home" >
        <action
            android:id="@+id/action_journeyHomeFragment_to_videoActivity"
            app:destination="@id/videoActivity" />
        <argument android:name="Courseobject"
            app:argType="string"
            android:defaultValue="N/A" />
    </fragment>
    <activity
        android:id="@+id/videoActivity"
        android:name="com.example.leado.activity.VideoActivity"
        android:label="activity_video"
        tools:layout="@layout/activity_video" >
        <argument
            android:name="SubjectObject"
            app:argType="string"
            android:defaultValue="N/A" />
        <argument android:name="LessonIndex"
            app:argType="integer"
            android:defaultValue="0" />
    </activity>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.leado.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.leado.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>