<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.leado.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_journeyHomeFragment"
            app:destination="@id/journeyHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.leado.AccountFragment"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.leado.LibraryFragment"
        tools:layout="@layout/fragment_library" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.leado.SearchFragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/journeyHomeFragment"
        android:name="com.example.leado.JourneyHomeFragment"
        tools:layout="@layout/fragment_journey_home" >
        <action
            android:id="@+id/action_journeyHomeFragment_to_videoActivity"
            app:destination="@id/videoActivity" />
    </fragment>
    <activity
        android:id="@+id/videoActivity"
        android:name="com.example.leado.activity.VideoActivity"
        android:label="activity_video"
        tools:layout="@layout/activity_video" >
        <argument
            android:name="VideoID"
            app:argType="string" />
        <argument
            android:name="videoDescription"
            app:argType="string"
            android:defaultValue="No intru available" />
    </activity>
</navigation>